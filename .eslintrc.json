{
	"$schema": "https://json.schemastore.org/eslintrc.json",
	"root": true,
	"extends": ["neon/common", "neon/node", "neon/prettier"],
	"plugins": ["unused-imports"],
	"rules": {
		"jsdoc/valid-types": 0,
		"jsdoc/check-tag-names": 0,
		"jsdoc/no-undefined-types": 0,
		"no-unused-vars": "off", // Disable the base ESLint rule
		"unused-imports/no-unused-imports": "error", // Enable the unused imports rule for autofix
		"unused-imports/no-unused-vars": [
			"warn",
			{
				"vars": "all",
				"varsIgnorePattern": "^_",
				"args": "after-used",
				"argsIgnorePattern": "^_"
			}
		]
	}
}
